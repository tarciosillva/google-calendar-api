{
    "compilerOptions": {
      "target": "ES2020",         // O alvo da compilação
      "module": "CommonJS",       // Módulo a ser usado
      "strict": true,              // Ativa todas as checagens de tipo
      "esModuleInterop": true,     // Habilita interoperabilidade entre CommonJS e ESM
      "skipLibCheck": true,        // Ignora checagem de arquivos de declaração
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist"          // Pasta de saída para os arquivos compilados
    },
    "include": ["src/*"],       // Inclui todos os arquivos TS na pasta src
    "exclude": ["node_modules"]    // Exclui a pasta node_modules
  }
  